@model IEnumerable<MVC_Web_App.Models.SubCategory>

@{
    ViewData["Title"] = "التصنيفات الفرعية";
}
<div class="container">
    <div class="page-title">
        <h1 class="text-info">التصنيفات الفرعية</h1>
    </div>



    <p>
        <a asp-action="Create" class="btn btn-primary">انشاء تصنيف فرعى جديد</a>
    </p>
    <table class="table table-responsive-lg table-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubCatName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.CatName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCatName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CatName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">التفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
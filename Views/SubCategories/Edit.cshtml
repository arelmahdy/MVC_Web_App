@model MVC_Web_App.Models.SubCategory

@{
    ViewData["Title"] = "تعديل التصنيفات الفرعية";
}
<div class="container">
    <div class="page-title">
        <h3 class="text-info">تعديل تصنيف فرعى</h3>
    </div>


    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="SubCatName" class="control-label"></label>
                    <input asp-for="SubCatName" class="form-control" />
                    <span asp-validation-for="SubCatName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.CatName" class="control-label"></label>
                    <select asp-for="CatId" class="form-control" asp-items="ViewBag.CatId"></select>
                    <span asp-validation-for="CatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="تعديل" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">العودة الى قائمة التصنيفات الفرعية</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

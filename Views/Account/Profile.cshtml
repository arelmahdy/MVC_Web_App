@model MVC_Web_App.Models.UserProfile

@{
    ViewData["Title"] = "الملف الشخصى";
}
<div class="container">
    <div class="page-title">
        <h3>الملف الشخصى</h3>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Profile" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-danger">@ViewBag.msg</div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonalWebUrl" class="control-label"></label>
                    <input asp-for="PersonalWebUrl" class="form-control" />
                    <span asp-validation-for="PersonalWebUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UrlImage" class="control-label"></label>
                    <input type="file" asp-for="UrlImage" class="form-control" name="img" accept=".png,.jpg,.jpeg,.bmp,.gif" />
                    <span asp-validation-for="UrlImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="UserControl">العودة الى لوحة التحكم</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

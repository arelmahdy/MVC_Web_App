
@{
    ViewData["Title"] = "التحقق من الحساب";
}
<div class="container">
    <div class="page-title">
        <h3 class="text-body">تأكيد البريد الالكترونى</h3>
    </div>
    <div class="text-danger">
        @{
            string msg = string.Empty;
            if (MVC_Web_App.Controllers.AccountController.message != null)
            {
                msg = MVC_Web_App.Controllers.AccountController.message;
            }
        }
        @msg
    </div>
    <div class="text-success">
        @{
            string success = string.Empty;
            if (MVC_Web_App.Controllers.AccountController.successmsg != null)
            {
                success = MVC_Web_App.Controllers.AccountController.successmsg;
            }
        }
        @success
    </div>
</div>
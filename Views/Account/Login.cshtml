@model MVC_Web_App.Controllers.AccountController.LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
}
<div class="container">
    <div class="page-title">
        <h4 class="text-danger">تسجيل الدخول</h4>
    </div>
    <h5 class="text-success">استخدم بياناتك التى قمت بالتسجيل بها </h5>
    <div class="text-danger">@ViewBag.msg</div>
    @if (TempData["successPass"] != null)
    {
        <div><p class="alert alert-success">@TempData["successPass"]</p></div>
    }
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" placeholder="UserName" name="username" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Password" name="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="" asp-for="rememberMe" name="rem" /> @Html.DisplayNameFor(model => model.rememberMe)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="دخول" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div><a asp-action="Register" class="reg-lbl">ليس لدي حساب</a></div>
    <div><a asp-action="ForgetPassword" class="reg-lbl">نسيت كلمة المرور</a></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

